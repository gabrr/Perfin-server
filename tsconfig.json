{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		},
		"noImplicitAny": false
	},
	"include": ["src", "env.d.ts"],
	"exclude": ["node_modules"]
}
