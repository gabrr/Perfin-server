		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"*": [
				"*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}